<div id="chat_window">
  <ol id='events'>
    <% @current_channel.messages.each do |message| %>
      <li style='border-left-color: <%= message.color %>'><%= message.content %></li>
    <% end %>
  </ol>

  <form>
    <input id='message' style='border-left-color: <%= session[:color] %>' data-color="<%= session[:color] %>" data-user-id="<%= session[:session_id] %>" placeholder='type message here...' />
    <!-- <textarea id='message' style='border-left-color: <%= session[:color] %>' data-color="<%= session[:color] %>" data-user-id="<%= session[:session_id] %>" placeholder='type message here...'></textarea> -->
    <!-- <button>Send</button> -->
  </form>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script src='/javascripts/application.js'></script>